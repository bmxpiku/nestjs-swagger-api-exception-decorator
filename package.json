{
  "name": "@nanogiants/nestjs-swagger-api-exception-decorator",
  "version": "1.1.2",
  "description": "NestJS Swagger decorator for API exceptions",
  "main": "./dist/index",
  "types": "./dist/index",
  "scripts": {
    "prepublishOnly": "rimraf dist && tsc -b tsconfig.build.json",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "prepack": "npm run lint && npm run prepublishOnly",
    "test": "jest"
  },
  "keywords": [
    "nestjs",
    "swagger",
    "api",
    "exception"
  ],
  "license": "MIT",
  "author": "NanoGiants GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/nanogiants/nestjs-swagger-api-exception-decorator.git"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.6.5",
    "@nestjs/swagger": "^4.7.9"
  },
  "devDependencies": {
    "@nestjs/common": "^7.6.5",
    "@nestjs/core": "^7.6.5",
    "@nestjs/swagger": "^4.7.9",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.13",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "useTabs": false,
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 120,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint"
    }
  }
}
